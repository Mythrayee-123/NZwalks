@model IEnumerable<NZWalks.UI.Models.DTO.RegionsDto>
<h1 class="mt-3">Region</h1>
<div class=" d-flex justify-content-end">
	<a class="btn btn-secondary" asp-controller="Regions" asp-action="Add">Add</a>
</div>
<table class="table table-bordered">
	<thead>
		<tr>
			<th>Id</th>
			<th>Code</th>
			<th>Name</th>
			<th>Edit</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var reg in Model)
		{
			<tr>
				<td>@reg.Id</td>
				<td>@reg.Code</td>
				<td>@reg.Name</td>
			<td>
				<a asp-controller="Regions" asp-action="Edit" asp-route-id="@reg.Id"
				class="btn btn-light">Edit</a>
			</td>
			</tr>
		}
	</tbody>
</table>